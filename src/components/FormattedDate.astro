---
type Props = { date: Date; displayTime?: boolean };

const { date, displayTime } = Astro.props;
const formattedDate = displayTime
    ? date.toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: '2-digit',
          minute: 'numeric'
      })
    : date.toLocaleDateString('en-us', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
      });
---

<time datetime={date.toISOString()}>
    {formattedDate}
</time>
