---
import { DateTime } from 'luxon';

type Props = { date: Date; displayTime?: boolean };

const { date, displayTime } = Astro.props;
const dateTime = DateTime.fromJSDate(date, { zone: 'America/Sao_Paulo' });

const formattedDate = displayTime ? dateTime.toLocaleString(DateTime.DATETIME_MED) : dateTime.toLocaleString(DateTime.DATE_MED);
---

<time datetime={date.toISOString()}>
    {formattedDate}
</time>
